{
  "name": "embedded-python-for-nvidia-omniverse",
  "displayName": "Embedded Python for NVIDIA Omniverse",
  "description": "Run python code embedded in the current NVIDIA Omniverse application scope",
  "version": "0.0.1",
  "publisher": "Toni-SM",
  "repository": "https://github.com/Toni-SM/embedded-python-for-nvidia-omniverse",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:embedded-python-for-nvidia-omniverse.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "embedded-python-for-nvidia-omniverse.run",
        "title": "Run",
        "category": "Embedded Python for NVIDIA Omniverse",
        "description": "Run python code embedded in the current NVIDIA Omniverse application scope",
        "iconPath": {
          "dark": "${workspaceRoot}/src/icons/icon-dark.png",
          "light": "${workspaceRoot}/src/icons/icon-light.png"
        }
      }
    ],
    "configuration": {
      "title": "Embedded Python for NVIDIA Omniverse",
      "properties": {
        "socket.extensionIp": {
          "type": "string",
          "format": "ipv4",
          "default": "127.0.0.1",
          "description": "IP address where the Omniverse application is running"
        },
        "socket.extensionPort": {
          "type": "number",
          "default": 8226,
          "markdownDescription": "Port used by the *Embedded VS Code for NVIDIA Omniverse* extension in the Omniverse application"
        },
        "output.clearBeforeRun": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Whether to clear the output before run the code. If unchecked (`false`), the output will be appended to the existing content"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
